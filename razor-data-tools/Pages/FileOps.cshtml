@page
@model razor_data_tools.Pages.FileOpsModel
@{
  
}

<form class="form-horizontal" method="post">

    <div class="form-group">

        <div class="col-sm-10">
            <label>Choose a name to download formatted earnings:</label> 
            <select name="sSelectedCustomer" asp-items="Model.Customers">
                <option value="">Choose a customer</option>              
            </select>
            <input asp-page-handler="FileDownload" type="submit" value="Download" />
        </div>

    </div>

    <div class="form-group">

        <div class="col-sm-10">
            <input asp-for="FileUpload" type="file" multiple />
            <span asp-validation-for="FileUpload"></span>

            <input asp-page-handler="Upload" type="submit" value="Upload" />

        </div>
    </div>



</form>
